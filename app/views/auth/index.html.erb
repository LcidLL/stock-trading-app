<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">Stock Trading App</h1>
    <h2 class="auth-subtitle">Please select your login type:</h2>

    <div class="login-options">
      <div class="login-option">
        <h3>Trader</h3>
        <%= link_to "Login as Trader", login_trader_path, class: "btn btn-primary" %>
        <%= link_to "Sign Up as Trader", signup_trader_path, class: "btn btn-secondary" %>
      </div>

      <div class="login-option">
        <h3>Admin</h3>
        <%= link_to "Login as Admin", "/admin/login", class: "btn btn-primary" %>
        <small>Admin accounts are created by existing administrators</small>
      </div>
    </div>
  </div>
</div>
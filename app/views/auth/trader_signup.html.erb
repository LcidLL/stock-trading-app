<h1>Create Trader Account</h1>

<%= form_with model: @trader, url: signup_trader_path, method: :post, local: true do |f| %>
  <% if @trader.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trader.errors.count, "error") %> prohibited this account from being saved:</h2>
      <ul>
        <% @trader.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, required: true, placeholder: "trader@example.com" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, required: true, placeholder: "Minimum 6 characters" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Create Account" %>
  </div>
<% end %>

<p><strong>Note:</strong> Your account will be pending approval after registration. You'll be able to login once an administrator approves your account.</p>

<%= link_to 'Back to Login Options', root_path %>

<style>
  .field {
    margin-bottom: 15px;
  }
  
  .field label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
  }
  
  .field input[type="email"], 
  .field input[type="password"] {
    width: 300px;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  
  .actions input[type="submit"] {
    padding: 10px 20px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
  
  #error_explanation {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 4px;
  }
</style>